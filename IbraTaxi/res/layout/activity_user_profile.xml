<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff00"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserProfileActivity" >

    <EditText
        android:id="@+id/user_p_last_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_p_email_txt"
        android:layout_alignLeft="@+id/user_p_first_name_txt"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/user_p_email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_p_password_txt"
        android:layout_alignLeft="@+id/user_p_last_name_txt"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/user_p_password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_p_email_txt"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="text|textPassword" />

    <EditText
        android:id="@+id/user_p_address_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_p_password_txt"
        android:layout_below="@+id/user_p_password_txt"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Address" />

    <EditText
        android:id="@+id/user_p_mobile_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_p_address_txt"
        android:layout_below="@+id/user_p_address_txt"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Mobile"
        android:inputType="phone" />

    <Button
        android:id="@+id/user_p_update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Update Information" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_p_first_name_txt"
        android:layout_alignParentLeft="true"
        android:text="First Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_p_last_name_txt"
        android:layout_alignParentLeft="true"
        android:text="Last Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_p_email_txt"
        android:layout_alignParentLeft="true"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_p_address_txt"
        android:layout_alignParentLeft="true"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_p_mobile_txt"
        android:layout_alignParentLeft="true"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_p_mobile_txt"
        android:layout_alignParentLeft="true"
        android:text="Mobile"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/user_p_first_name_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_p_last_name_txt"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:hint="First Name" >

        <requestFocus />
    </EditText>

</RelativeLayout>